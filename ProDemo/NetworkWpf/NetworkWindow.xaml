<Window x:Class="NetworkWpf.NetworkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkWpf"
        mc:Ignorable="d"
        Title="NetworkWindow">
    <DockPanel>
        <StackPanel Orientation="Vertical" Width="100" DockPanel.Dock="Left">
            <Button x:Name="HttpClientBtn" Content="HttpClient" Click="HttpClientBtn_Click"/>
            <Button x:Name="GetDataWithHeadersBtn" Content="GetDataWithHeaders" Click="GetDataWithHeadersBtn_Click"/>
            <Button x:Name="UriBtn" Content="Uri" Click="UriBtn_Click"/>
            <Button x:Name="UribuilderBtn" Content="Uribuilder" Click="UribuilderBtn_Click"/>
        </StackPanel>
        
        <TextBox x:Name="showText" Text="text" Width="600" TextWrapping="Wrap" ></TextBox>
    </DockPanel>
</Window>
